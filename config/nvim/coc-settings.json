{
    "snippets.priority": 100,
    "snippets.loadFromExtensions": false,
    "snippets.snipmate.enable": false,
    "snippets.ultisnips.enable": true,
    "snippets.userSnippetsDirectory": "~/.config/nvim/ultisnippets",
    "snippets.enableStatusItem": true,
    "snippets.ultisnips.directories": [
        "UltiSnips"
    ],
    "languageserver": {
        "terraform": {
            "command": "terraform-lsp",
            "filetypes": ["terraform"],
            "initializationOptions": {}
        },
        "golang": {
            "command": "gopls",
            "rootPatterns": ["go.mod"],
            "filetypes": ["go"]
        },
        "cquery": {
            "command": "~/Software/cquery/build/cquery",
            "args": ["--log-file=/tmp/cq.log"],
            "filetypes": ["c", "cpp"],
            "rootPatterns": ["compile_flags.txt", "compile_commands.json", ".vim/", ".git/", ".hg/"],
            "initializationOptions": {
                "cacheDirectory": "/tmp/cquery"
            }
        }
    }
}
